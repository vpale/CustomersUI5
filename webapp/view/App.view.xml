<mvc:View controllerName="vcp.Customers.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<Shell>
		<App>
			<pages>
				<Page title="{i18n>tituloPagina}">
					<Panel headerText="{i18n>tituloPanel}" expandable="true" class="sapUiResponsiveMargin">
						<Button text="{i18n>textoBoton}" press=".onShowHello" class="sapUiSmallMarginEnd"></Button>
						<Input value="{/raiz/name}" valueLiveUpdate="true" width="60%"></Input>
						<Text text="Hello {/raiz/name}" class="sapUiSmallMargin boldElements"></Text>
					</Panel>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>